<?xml version="1.0" encoding="utf-8"?>

    <pma:structure_schemas>
        <pma:database name="beereveryday" collation="utf8_general_ci" charset="utf8">
            <pma:table name="cervezas">
                CREATE TABLE `cervezas` (
                  `id` int(5) NOT NULL AUTO_INCREMENT,
                  `fabricante` varchar(40) DEFAULT NULL,
                  `nombre` varchar(40) NOT NULL,
                  `grado` double NOT NULL,
                  `capacidad` double NOT NULL,
                  `precio` double NOT NULL,
                  `pais` varchar(40) NOT NULL,
                  `artesana` tinyint(1) NOT NULL,
                  `color` enum('rubia','negra','roja','tostada','blanca','ambar') NOT NULL,
                  `grano` enum('cebada','trigo','avena') NOT NULL,
                  `tipo` enum('lager','ale','pilsner') NOT NULL,
                  `Imagen` varchar(100) NOT NULL,
                  `valoracionMedia` enum('1','2','3','4','5') NOT NULL DEFAULT '1',
                  PRIMARY KEY (`id`),
                  UNIQUE KEY `id` (`id`)
                ) ENGINE=InnoDB AUTO_INCREMENT=9 DEFAULT CHARSET=utf8;
            </pma:table>
        </pma:database>
    </pma:structure_schemas>

